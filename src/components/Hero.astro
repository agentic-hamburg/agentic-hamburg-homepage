---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.png";

export interface Props {
  title: string;
  description: string;
  buttonText: string;
}

const { title, description, buttonText } = Astro.props;
const descriptionLines = description
  .split("\n")
  .map(line => line.trim())
  .filter(Boolean);
---

<div
  class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-12 md:flex-row"
>
  <div class="w-full flex-1 space-y-6 md:max-w-[420px]">
    <h1 class="display-title">
      {title}
    </h1>
    <div class="max-w-[420px] space-y-2 text-lg text-gray-600">
      {descriptionLines.map(line => <p>{line.replace(/^â€¢\s*/, "")}</p>)}
    </div>
  </div>
  <div
    class="mt-8 flex w-full flex-1 justify-center md:mt-0 md:flex-[0.6] md:justify-end"
  >
    <Image
      src={heroImage}
      alt={title}
      class="w-full max-w-[720px] rounded-2xl object-contain"
      style="aspect-ratio: 16 / 9;"
      width={960}
      height={540}
      loading="eager"
      fetchpriority="high"
      format="webp"
    />
  </div>
</div>
