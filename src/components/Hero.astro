---
import { Image } from "astro:assets";
import heroImage from "../assets/hero1.jpg";

export interface Props {
  title: string;
  description: string;
  buttonText: string;
}

const { title, description, buttonText } = Astro.props;
const bulletPoints = description.split("\n");
---

<div
  class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-12 md:flex-row"
>
  <div class="w-full flex-1 space-y-6 md:w-1/2">
    <h1 class="text-3xl font-bold tracking-tight sm:text-4xl lg:text-5xl">
      {title}
    </h1>
    <ul class="max-w-[600px] space-y-2 text-lg text-gray-600">
      {bulletPoints.map(point => <li>{point}</li>)}
    </ul>
    <div class="flex flex-col gap-4 pt-4 sm:flex-row">
      <button
        type="button"
        class="button button--medium button--secondary"
        id="waitlist-button"
        onclick="document.getElementById('signup-section')?.scrollIntoView({ behavior: 'smooth' })"
      >
        <i>{buttonText}</i>
      </button>
    </div>
  </div>
  <div
    class="mt-8 flex w-full flex-1 justify-center md:mt-0 md:w-1/2 md:justify-end"
  >
    <Image
      src={heroImage}
      alt={title}
      class="max-h-[400px] rounded-lg object-cover shadow-xl md:max-h-[500px]"
      width={600}
      height={500}
      loading="eager"
      fetchpriority="high"
      format="webp"
    />
  </div>
</div>

<style>
  .button {
    display: inline-block;
    cursor: pointer;
    border: 0;
    border-radius: 3em;
    font-weight: 700;
    line-height: 1;
    font-family: "IBM Plex Mono", monospace;
  }

  .button--secondary {
    box-shadow: rgba(0, 0, 0, 0.15) 0px 0px 0px 1px inset;
    background-color: transparent;
    color: #333;
  }

  .button--medium {
    padding: 11px 20px;
    font-size: 14px;
  }

  .button:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }
</style>
