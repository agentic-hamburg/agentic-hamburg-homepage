---
import { Image } from "astro:assets";
import headerLogo from "../assets/header.png";
import { useTranslations } from "../lib/i18n/utils";

const t = useTranslations();
const currentPath = Astro.url.pathname;

// Determine which navigation item is active
const isHome = currentPath === "/";
const isCodingMeetup = currentPath.includes("/coding-meetup");
const isCodingDay = currentPath.includes("/coding-day");
const isNews = currentPath.includes("/news");
const isAbout = currentPath.includes("/about");
---

<header class="site-header w-full border-b border-black">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-20 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex items-center" aria-label="Agentic Hamburg home">
          <Image
            src={headerLogo}
            alt="Agentic Hamburg"
            width={320}
            height={64}
            class="h-16 w-auto"
            loading="eager"
            decoding="sync"
          />
        </a>
      </div>
      <nav class="flex items-center space-x-6 text-lg font-semibold">
        <a
          href="/"
          class={`text-gray-700 hover:text-gray-900 ${isHome ? "font-bold" : ""}`}
          >{t.header.home}</a
        >
        <a
          href="/coding-meetup"
          class={`text-gray-700 hover:text-gray-900 ${isCodingMeetup ? "font-bold" : ""}`}
          >Coding Meetup</a
        >
        <a
          href="/coding-day"
          class={`text-gray-700 hover:text-gray-900 ${isCodingDay ? "font-bold" : ""}`}
          >Coding Day</a
        >
        <a
          href="/news"
          class={`text-gray-700 hover:text-gray-900 ${isNews ? "font-bold" : ""}`}
          >{t.header.news}</a
        >
        <a
          href="/about"
          class={`text-gray-700 hover:text-gray-900 ${isAbout ? "font-bold" : ""}`}
          >{t.header.about}</a
        >
      </nav>
    </div>
  </div>
</header>
