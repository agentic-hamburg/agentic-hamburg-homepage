---
import { useTranslations } from "../lib/i18n/utils";

const t = useTranslations();
const currentPath = Astro.url.pathname;

// Determine which navigation item is active
const isHome = currentPath === "/";
const isNews = currentPath.includes("/news");
const isAbout = currentPath.includes("/about");
---

<header class="w-full border-b border-gray-200">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <h1 class="font-mono text-2xl font-medium italic">agentic.hamburg</h1>
        </a>
      </div>
      <nav class="flex items-center space-x-6">
        <a
          href="/"
          class={`text-gray-700 hover:text-gray-900 ${isHome ? "font-bold" : ""}`}
          >{t.header.home}</a
        >
        <a
          href="/news"
          class={`text-gray-700 hover:text-gray-900 ${isNews ? "font-bold" : ""}`}
          >{t.header.news}</a
        >
        <a
          href="/about"
          class={`text-gray-700 hover:text-gray-900 ${isAbout ? "font-bold" : ""}`}
          >{t.header.about}</a
        >
      </nav>
    </div>
  </div>
</header>
