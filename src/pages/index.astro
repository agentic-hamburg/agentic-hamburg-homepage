---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import Newsletter from "../components/Newsletter.astro";
import { useTranslations } from "../lib/i18n/utils";

const t = useTranslations();
---

<Layout title="Agentic Hamburg - The Coding Meetup for Hamburg">
  <Header />

  <main>
    <section class="px-4 py-12 sm:px-6 lg:px-8">
      <Hero
        title={t.hero.title}
        description={t.hero.subtitle}
        buttonText={t.hero.cta}
      />
    </section>

    <!-- Community Overview Section -->
    <section class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-4xl space-y-6 text-center">
        <p class="text-base font-semibold uppercase tracking-[0.2em] text-gray-500">
          Agentic Coding in Hamburg
        </p>
        <h2 class="display-title">
          A Community for Builders Who Co-Create with AI
        </h2>
        <p class="text-lg text-gray-600">
          Agentic Hamburg is a volunteer-run community that learns how to ship
          reliable AI-assisted workflows together. We pair real projects with
          hands-on sessions so that every experiment ends in a pull request,
          not in a slide deck.
        </p>
        <p class="text-lg text-gray-600">
          Expect tactical notes on coding with agents, labs around automation
          tooling, and story time with the people who keep Hamburg's tech
          scene curious.
        </p>
      </div>
    </section>

    <section
      id="signup-section"
      class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8"
    >
      <Newsletter />
    </section>
  </main>

  <Footer />
</Layout>
